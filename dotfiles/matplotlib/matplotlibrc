axes.ymargin: 0.1
# figure.autolayout: True
figure.constrained_layout.use: True
# axes.prop_cycle : cycler(color='bgrcmyk')
# axes.prop_cycle : cycler(color=['blue', 'darkgreen'])

# width of lines drawn on the plot, not the borders and stuff
# lines.linewidth   : 1.5     # line width in points
# axes.linewidth : 1.5

# lines refers to the plot() command
# default to using a marker and no line
# lines.marker: o
# lines.linestyle: none


# These affect imshow
# make pixels just boxes
image.interpolation: nearest

# zero in lower left hand corner
image.origin: lower

errorbar.capsize: 2

legend.loc: upper right
legend.frameon: False
legend.borderaxespad: 2


