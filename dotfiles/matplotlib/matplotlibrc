# this will be the backend used.  Note, it is not actually "loaded" until
# the first plot is made. So you can import matplotlib and use the command
# matplotlib.use(backend) before plots are made to override this.

# backend      : Agg
# backend      : Cairo
# backend      : TkAgg
# backend: module://mplcairo.base
backend: PDF

# use latex for all text handling.  Note this does slow things down.
# For faster use set to False and then turn on when you need it
# with pylab.rc('text',usetex=True) in your script.

# text.usetex  : True
mathtext.fontset : cm


font.family : cmr10
# font.family : Computer Modern
# font.family : monospace
# font.family : sans-serif
# font.family : serif
# font.serif: Computer Modern Roman
# font.sans-serif: Computer Modern Roman
# font.sans-serif: DejaVu
# font.serif : Times New Roman
# font.serif : DejaVu
# font.monospace: Inconsolata
# font.weight: 100

xtick.top: True
ytick.right: True
xtick.minor.visible: True
ytick.minor.visible: True

xtick.major.size     : 8      # major tick size in points
xtick.minor.size     : 4      # minor tick size in points
ytick.major.size     : 8      # major tick size in points
ytick.minor.size     : 4      # minor tick size in points

xtick.direction: in
ytick.direction: in

axes.labelsize:18
xtick.labelsize:16
ytick.labelsize:16
